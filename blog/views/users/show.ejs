<% include ../partials/header %>

<header>
        <h1>Show Page for <%= user.name%></h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/users">Users Index</a></li>
            </ul>
        </nav>
    </header>
    
    <main>
        <section>
            <h2>User Attributes</h2>
            <ul>
                <li>Name: <%= user.name%></li>
                <section><a href="/users/<%=user._id%>"></a></section>
                
                <div class="editBtn"><a href="/users/<%=user._id%>/edit">Edit</a></div>
                <form action="/users/<%=user.id%>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-primary">Delete resource</button>
                </form>
            </ul>
            <%for(let i = 0; i < user.photos.length; i++){%>
                <h3> <%=user.photos[i].title%></h3>
                <img class="show" src="<%=user.photos[i].img%>" alt="">
            <%}%>
            
        </section>
    </main>


<% include ../partials/footer %>